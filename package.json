{
  "name": "ssng",
  "version": "0.3.0",
  "description": "SSNG electron version",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win --x64",
    "build-mac": "electron-builder --mac --x64",
    "build-appx": "electron-builder -w appx",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.hirofujita.ssng",
    "productName": "ssng",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "package.json",
      "package-lock.json"
    ],
    "mac": {
      "icon": "src/assets/icon1024.png",
      "target": "dmg"
    },
    "win": {
      "icon": "src/assets/icon1024.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "appx": {
      "identityName": "ECHONETCONSORTIUM.ssng",
      "applicationId": "ECHONETCONSORTIUM.ssng",
      "publisherDisplayName": "HIROYUKI FUJITA",
      "publisher": "CN=",
      "languages": [
        "JA-JP",
        "EN-US"
      ]
    }
  },
  "keywords": [
    "SSNG",
    "ECHONET Lite"
  ],
  "author": "Hiroyuki Fujita",
  "license": "MIT",
  "devDependencies": {
    "electron": "^11.1.1",
    "electron-builder": "^22.10.5"
  }
}
